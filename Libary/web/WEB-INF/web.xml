    <servlet-mapping>
        <servlet-name>UpdatePatron</servlet-name>
        <url-pattern>/UpdatePatron</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
