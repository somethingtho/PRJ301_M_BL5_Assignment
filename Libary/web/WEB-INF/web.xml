        <servlet-name>Overdue</servlet-name>
        <servlet-class>servlets.Overdue</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertPatron</servlet-name>
        <servlet-class>servlets.Patron.InsertPatron</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListPatron</servlet-name>
        <servlet-class>servlets.Patron.ListPatron</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePatron</servlet-name>
        <servlet-class>servlets.Patron.DeletePatron</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePatron</servlet-name>
        <servlet-class>servlets.Patron.UpdatePatron</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertHold</servlet-name>
        <url-pattern>/InsertHold</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListHold</servlet-name>
        <url-pattern>/ListHold</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckOut</servlet-name>
        <url-pattern>/CheckOut</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Waiting</servlet-name>
        <url-pattern>/Waiting</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListWait</servlet-name>
        <url-pattern>/ListWait</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteHold</servlet-name>
        <url-pattern>/Delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOut</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Overdue</servlet-name>
        <url-pattern>/Overdue</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertPatron</servlet-name>
        <url-pattern>/InsertPatron</url-pattern>
